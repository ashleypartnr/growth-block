{
  "name": "greengrowth-impact-showcase",
  "version": "1.0.0",
  "description": "A high-performance, accessible project showcase block for GreenGrowth using the WordPress Interactivity API",
  "author": "GreenGrowth",
  "license": "GPL-2.0-or-later",
  "main": "build/index.js",
  "scripts": {
    "build": "wp-scripts build src/index.js --output-path=build && npm run copy-files",
    "copy-files": "cp src/block.json build/ && cp src/render.php build/",
    "start": "wp-scripts start src/index.js --output-path=build",
    "lint:js": "wp-scripts lint-js",
    "lint:css": "wp-scripts lint-style",
    "format": "wp-scripts format",
    "plugin-zip": "wp-scripts plugin-zip",
    "test:js": "jest",
    "test:js:watch": "jest --watch",
    "test:js:coverage": "jest --coverage",
    "test:php": "phpunit",
    "test:php:coverage": "phpunit --coverage-html coverage",
    "test": "npm run test:js && npm run test:php"
  },
  "devDependencies": {
    "@wordpress/scripts": "^27.0.0",
    "autoprefixer": "^10.4.23",
    "tailwindcss": "^3.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "@wordpress/interactivity": "^6.0.0"
  }
}
